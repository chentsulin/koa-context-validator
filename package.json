{
  "name": "koa-context-validator",
  "version": "1.0.0",
  "description": "A robust context validator for koajs",
  "license": "MIT",
  "author": "C.T. Lin <chentsulin@gmail.com> (https://github.com/chentsulin/koa-context-validator)",
  "repository": "chentsulin/koa-context-validator",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "check": "tsc --noEmit",
    "clean": "rimraf lib",
    "lint": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm test && npm run build",
    "test": "npm run lint && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage",
    "prettier": "prettier --write --list-different .",
    "prettier:check": "prettier --check .",
    "preversion": "npm test"
  },
  "types": "lib/index.d.ts",
  "peerDependencies": {
    "joi": ">= 17.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@koa/router": "^10.1.0",
    "@types/jest": "^27.0.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-mount": "^4.0.0",
    "@types/koa__router": "^8.0.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "joi": "^17.4.2",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-mount": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.5",
    "typescript": "^4.3.5"
  },
  "keywords": [
    "context",
    "joi",
    "koa",
    "middleware",
    "validate",
    "validator"
  ],
  "engines": {
    "node": ">=12"
  }
}
